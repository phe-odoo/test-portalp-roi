<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

            <record id="view_partner_form" model="ir.ui.view">
                <field name="name">view_partner_form</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form" />
                <field name="arch" type="xml">
                    <xpath expr="//sheet" position="before">
                        <header>
                            <button type="object" name="action_confirm_vendor" string="Confirm Vendor" attrs="{'invisible': ['|', ('is_seller', '!=', True), ('vendor_state', '=', 'confirmed')]}" class="oe_button"/>
                            <field name="vendor_state" widget="statusbar" attrs="{'invisible': [('is_seller', '!=', True)]}"/>
                        </header>
                    </xpath>

                    <xpath expr="//div[hasclass('o_address_format')]" position="after">
                        <field name="is_location" />
                    </xpath>

                    <xpath expr="//page[@name='internal_notes']" position="inside">
                        <group><field name="uuid" /></group>
                    </xpath>
                    
                    <xpath expr="//group[@name='misc']" position="inside">
                        <field name="management_center_id" />
                    </xpath>
                    
                    <xpath expr="//page[@name='sales_purchases']//group[@name='sale']" position="inside">
                        <field name="is_client" />
                        <field name="is_seller" />
                    </xpath>

                </field>
            </record>



    </data>
</odoo>
